@model Note

<form asp-controller="Notes" asp-action="Sil" method="post">
    <div class="form-control">
        <input asp-for="Id" type="hidden" />
        <span> <strong>@Model.Content</strong> içerikli <strong>@Model.Title'</strong> notu silinecektir onaylıyor musunuz ?  </span>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary">Evet,Sil</button>
    </div>
</form>

@model List<Note>

@{
    ViewData["Title"] = "My Notes";
}

<a asp-controller="Notes" asp-action="Yeni" class="btn btn-outline-primary">Yeni Not Ekle</a>

 @if (Model.Count == 0)
 {
     <p>Üzgünüm,Gösterilecek bir notun yok</p>
 }
 else
	{
		<ul>
			@foreach (Note note in Model)
            {
				<li>
					<strong>@note.Title</strong><br />
					@note.Content
				</li>
            }
		</ul>
	}